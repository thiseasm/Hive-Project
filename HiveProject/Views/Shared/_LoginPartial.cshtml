@using Microsoft.AspNet.Identity
   
    @if (Request.IsAuthenticated)
    {
        using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
        {
            @Html.AntiForgeryToken()



            <ul class="nav navbar-nav navbar-right">
                <li>
                    @Html.ActionLink(User.Identity.GetUserName() + "!", "Index", "Manage", new { area = "" }, new { @class = "navbar-brand" }@*routeValues: null, htmlAttributes: new { title = "Manage" }*@)
                </li>
                <li class="navbar-brand"> | </li>
                <li><a href="javascript:document.getElementById('logoutForm').submit()" class="navbar-brand">Log off</a></li>
            </ul>
        }
    }
    else
    {
        <ul class="nav navbar-nav navbar-right">
            <li>@Html.ActionLink("Log in", "Login", "Account", new { area = "" }, new { @class = "navbar-brand" }@*htmlAttributes: new { id = "loginLink" }*@)</li>
            <li class="navbar-brand"> | </li>
            <li>@Html.ActionLink("Register", "Register", "Account", new { area = "" }, new { @class = "navbar-brand" }@*htmlAttributes: new { id = "registerLink" }*@)</li>
        </ul>
    }
