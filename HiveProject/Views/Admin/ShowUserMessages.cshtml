@using PagedList;
@using PagedList.Mvc;
@model IPagedList<HiveProject.Models.MessageViewModel>

@{
    ViewBag.Title = "ShowUserMessages";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>ShowUserMessages</h2>


<table class="table">
    <tr>
        <th>
            MessageId
        </th>

        <th>
            SenderName
        </th>

        <th>
            ReceiverName
        </th>
        <th>
            Body
        </th>
        <th>
            Date
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MessageId)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.SenderName)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.ReceiverName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Body)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>

            <td>
                @Html.ActionLink("Delete", "DeleteMessage", new {  id=item.MessageId })
            </td>
        </tr>
    }

</table>

<div>
    <ul class="pagination">@Html.PagedListPager(Model, page => Url.Action("ShowUserMessages", new { page }))</ul>
</div>

<div>
    @Html.ActionLink("Back to Users", "Index")
</div>
